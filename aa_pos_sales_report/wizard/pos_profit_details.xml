<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_profit_details_wizard" model="ir.ui.view">
        <field name="name">pos.profit.wizard.form</field>
        <field name="model">pos.profit.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Details">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="pos_config_ids" mode="tree" colspan="4" nolabel="1" />
                </group>
                <footer>
                    <button name="generate_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_pos_profit_details" model="ir.actions.act_window">
        <field name="name">POS Sales Profit Details</field>
        <field name="res_model">pos.profit.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_report_order_profit_details" name="Sales Profit Details" action="action_report_pos_profit_details" parent="point_of_sale.menu_point_rep" sequence="5"/>

</odoo>
